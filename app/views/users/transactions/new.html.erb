<% content_for :scripts do %>
  <%= javascript_pack_tag 'vue-qrscaner', 'data-turbolinks-track': 'reload' %>
<% end %>

<div class="container">
  <h1 class='new-title'><i class="fas fa-plus"></i>新增消費</h1>
  <div class="" id="app">
    <div class="scan">
      <a href="#" v-if="!isScanned && !clicked" @click.prevent="clickStatus" class="btn">點我，開始掃發票吧！</a>
    </div>
    <div>
    <qrcode-stream v-if="clicked" @decode="onDecode" @init="onInit" class="scan-port"/>
    </div>
    <%= render 'form', transaction: @transaction %>
  </div>
</div>
